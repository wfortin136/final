<h1> Edit Scorecard </h1>

<%= form_tag "/scorecards/#{@scorecard.id}", :method => "patch" do%>

  <div>
    <label> Fight </label>
    <label><%=@scorecard.fighter_1.name %> vs. <%= @scorecard.fighter_2.name%> </label>
    </select>
  </div>

  <div>
    <label class="fa">Fighter A: <%=@scorecard.fighter_1.name%></label>
    <br>
    <label class="fb">Fighter B: <%=@scorecard.fighter_2.name%></label>
  </div>
  
  <table class='table table-striped'>
    <thead>
      <tr>
        <th colspan="6"> Scorecard </th>
      </tr>
      <tr>
        <th width="10%"></th>
        <th width="30%" colspan="2"> 
        <select name="judge_1" >
          <% Judge.all.each do |j| %>
            <% if @scorecard.judge_1 == j %>
              <option value="<%= j.id %>" selected><%=j.name%> </option>
            <%else %>
              <option value="<%= j.id %>"> <%=j.name%> </option>
            <% end %>
          <% end %>
        </select>
        </th>
        <th width="30%" colspan="2"> 
        <select name="judge_2" >
          <% Judge.all.each do |j| %>
            <% if @scorecard.judge_2 == j %>
              <option value="<%= j.id %>" selected><%=j.name%> </option>
            <%else %>
              <option value="<%= j.id %>"> <%=j.name%> </option>
            <% end %>
          <% end %>
        </select>
        </th>
        <th width="30%" colspan="2"> 
        <select name="judge_3" >
          <% Judge.all.each do |j| %>
            <% if @scorecard.judge_3 == j %>
              <option value="<%= j.id %>" selected><%=j.name%> </option>
            <%else %>
              <option value="<%= j.id %>"> <%=j.name%> </option>
            <% end %>
          <% end %>
        </select>
        </th>
      </tr>
      <tr>
        <th> Round </th>
        <th> A </th>
        <th> B </th>
        <th> A </th>
        <th> B </th>
        <th> A </th>
        <th> B </th>
      </tr>
    </thead>
    <tbody>
    <tr>
